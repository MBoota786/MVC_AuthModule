@model IEnumerable<myClaims>

<h1>Claims</h1>
<a class="btn btn-sm btn-primary" asp-action="CreateClaim">Create Claim</a>
<table class="table">
    <thead>
        <tr>
            <th>type</th>
            <th>value</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.type</td>
                <td>@item.value</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="EditClaim" asp-route-id="@item.id">Edit</a> |
                    <a class="btn btn-sm btn-danger" asp-action="DeleteClaim" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>