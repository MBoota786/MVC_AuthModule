@model List<IdentityRole>

<h1>Roles</h1>
<a class="btn btn-sm btn-primary" asp-action="CreateRole" asp-controller="Role">Add Roles</a>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    @if(role.Name != "Admin"){
                        <a href="@Url.Action("EditRole", new { roleId = role.Id })">Edit</a>
                        <a href="@Url.Action("DeleteRole", new { roleId = role.Id })">Delete </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
