@model clsSignUpAuthentication

@{
    ViewData["Title"] = "Index";
    Layout = "";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container mt-5 pt-5">

<h1 class="text-center">Registor / SignUp</h1>

<hr />

    <div class="row justify-content-center" >
        <div class="col-md-4">
            <form asp-action="Signup" enctype="multipart/form-data">
                @* _____ All Error Div _______ *@
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                @* _____ Create User (Authenticate / Register) _______ *@
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConPassword" class="control-label"></label>
                    <input asp-for="ConPassword" class="form-control" />
                    <span asp-validation-for="ConPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="profileImage" class="control-label"></label>
                    @*<input asp-for="profileImage" class="form-control" />*@
                    <input asp-for="iImage" class="form-control" />
                    <span asp-validation-for="profileImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

            <div class="container">
                    @if (ViewBag.email == "Email Aready Exist")
                    {
                        <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div"  style="height:55px">
                            <div class="py-3">
                                @ViewBag.email
                            </div>
                        </div>
                    }
                    @if(ViewBag.email == "Match")
                    {

                        <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div" style="height:55px">
                            <div asp-validation-summary="ModelOnly" class="text-danger py-3"></div>
                        </div>
                    }
                    
            </div>

            <div class="mt-3 pt-5">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
<script>
    setTimeout(function () {
        document.getElementById("div").style.transition = "0.4s";
        document.getElementById("div").style.height = "0px";
    }, 2000)
</script>